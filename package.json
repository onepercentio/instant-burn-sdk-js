{
  "name": "instant-burn-sdk",
  "version": "0.0.1",
  "description": "SDK for interacting with on-chain Instant Burn solution",
  "main": "index.js",
  "scripts": {
    "test": "nyc mocha --exit src/**/tests/*.js",
    "dev": "nodemon index.js",
    "lint": "eslint src",
    "check": "npm run lint && depcheck",
    "watch-test": "nodemon -x npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onepercentio/instant-burn-sdk-js.git"
  },
  "keywords": [
    "instant",
    "burn",
    "carbon",
    "credits",
    "offset"
  ],
  "author": "Moss.earth",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/onepercentio/instant-burn-sdk-js/issues"
  },
  "homepage": "https://github.com/onepercentio/instant-burn-sdk-js#readme",
  "dependencies": {
    "@celo/contractkit": "^1.1.0",
    "bignumber.js": "^9.0.1",
    "iate-components": "^0.5.2",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "depcheck": "^1.4.0",
    "eslint": "^7.23.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^1.7.0",
    "expect.js": "^0.3.1",
    "husky": "^5.1.3",
    "mocha": "^8.3.2",
    "nyc": "^15.1.0",
    "sinon": "^9.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run check"
    }
  },
  "nyc": {
    "check-coverage": true,
    "lines": 10,
    "include": [
      "dist/**/*.js"
    ],
    "exclude": [
      "dist/**/test"
    ],
    "reporter": [
      "html"
    ]
  },
  "engines": {
    "node": "14"
  }
}
